# Ensure we're using pnpm for this package
engine-strict=true

# Set the package registry
registry=https://registry.npmjs.org/

# Save exact versions of packages
save-exact=true

# Ignore scripts during installation for security
ignore-scripts=true

# Set the exact Node.js version
node-version=24.0.1

# Set the default tag for publishing
tag=latest

# Ensure we don't publish with devDependencies
# production=true

# Set the access level for scoped packages
# access=public

# Don't create package-lock.json
package-lock=false

# Use pnpm's node-linker to avoid hoisting issues
node-linker=hoisted
